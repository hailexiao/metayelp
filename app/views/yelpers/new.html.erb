<% content_for :title, "Add New Yelper" %>

<div class="row">
  <div class = "small-12 columns" align="center">
    <p> Paste the full link to the profile of the Yelper you want to review below! </p>
  </div>


  <div class="small-9 small-centered columns">
   <%= form_for @yelper do |f| %>
    <%= f.label "Profile URL" %>
    <%= f.text_field :uid %>

    <%= f.submit "Submit", class: "button round tiny" %>
   <%- end -%>
  </div>
</div>
