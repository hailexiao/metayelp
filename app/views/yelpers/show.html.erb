<div class="row">
  <div class="small-3 columns">
    <img src="<%= @yelper.image_url %>" alt="profile image">
    <a href="http://www.yelp.com/user_details?userid=<%= @yelper.uid %>"><h4><%= @yelper.name %></h4></a>
    <p><i class="fi-globe"></i><span><%= @yelper.location %></span></p>
      <p><i class="fi-page"></i>
        <a href="http://www.yelp.com/user_details?userid=<%= @yelper.uid %>"> Profile Page</a></p>

<div class="row bump">
   <div class="small-12 large-6 columns">
      <div class="row">
         <div class="profile-card">
            <div class="small-12 large-4 columns">
                  <img src="<%= @yelper.image_url %>" alt="profile image">
            </div>
            <div class="small-12 large-8 columns">
               <a href="http://www.yelp.com/user_details?userid=<%= @yelper.uid %>"><h4><%= @yelper.name %></h4></a>
               <p><i class="fi-map"></i><span><%= @yelper.location %></span></p>
               <p><i class="fi-page"></i><a href="http://www.yelp.com/user_details?userid=<%= @yelper.uid %>">Profile Page</a></p>
            </div>
            <div class="row collapse">
               <ul class="button-group even-3">
                  <li><a href="#" class="button"> Reviews <span><%= @yelper.number_of_reviews %> </span></a></li>
                  <li><a href="#" class="button">  Fans <span>432 </span></a></li>
    <ul class="button-group even-2">
     <li><a href="#" class="button"> Reviews <span><%= @yelper.number_of_reviews %> </span></a></li>
     <li><a href="#" class="button">  Fans <span>432 </span></a></li>
    </ul>
  </div>


  <div class="small-9 columns">
    <%= render "form" %>
    <div class="row">
      <% @yelper.reviews.each do |review| %>
        <div class="row">
          <div class="small-3 columns" align="center">
            <div class="user-image">
              <img src="<%= review.user.profile_photo %>" alt="profile image">
            </div>
            <%= review.user.last_name %>
          </div>
          <div class="small-9 columns">
            <p><%= review.rating %></p>
            <p><%= review.body %></p>
            <div class = "votes">
              <a href="/upvote/<%= review.id %>" data= "<%= review.id %>"id="up-vote"><i class="fi-arrow-up"></i>
              <span class="upvote-count"> <%= review.upvotes.count %> </span></a>
              <a href="/downvote/<%= review.id %>" data="<%= review.id %>" id="down-vote"><i class="fi-arrow-down"></i>
              <span class="downvote-count"> <%= review.downvotes.count %> </span></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "form" %>



<% end %>
